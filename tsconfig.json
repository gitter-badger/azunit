{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "types": ["node"]
    },
    "include": [
        "src/**/*.ts"
    ], 
    "exclude": [
        "node_modules"
    ]
}